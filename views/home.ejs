<%- include('partials/header', { title: 'Home', user: user }) %>

<!-- Hero Section -->
<div
  class="hero-section text-center d-flex align-items-center justify-content-center vh-100 text-white"
  style="
    background-image: url('https://cdn.pixabay.com/photo/2019/07/12/01/07/mountain-4331689_1280.jpg');
    background-size: cover;
    background-position: center;
    position: relative;
  "
>
  <div
    style="
      background-color: rgba(0, 0, 0, 0.6);
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    "
  ></div>
  <div class="container" style="position: relative">
    <h1 class="display-3 font-weight-bold mb-4">Welcome to Travel Blog</h1>
    <p class="lead mb-4">A place to share your journey and connect</p>
    <% if (user) { %>
    <p class="mb-4">
      Hello,
      <span class="username font-weight-bold"><%= user.username %></span>!
      Welcome back!
    </p>
    <a class="btn btn-primary btn-lg mr-2" href="/user/profile"
      ><i class="fas fa-user"></i> Go to your profile</a
    >
    <% } else { %>
    <p class="mb-4">
      Please
      <a class="btn btn-primary mx-1" href="/auth/login"
        ><i class="fas fa-sign-in-alt"></i> Login</a
      >
      or
      <a class="btn btn-warning mx-1" href="/auth/register"
        ><i class="fas fa-user-plus"></i> Register</a
      >
      to continue.
    </p>
    <% } %>
  </div>
</div>

<!-- Features Section -->
<div class="container-fluid mt-5">
  <h1 class="text-center font-weight-bold mb-4">What's here</h1>
  <div class="row">
    <div class="col-md-4">
      <div class="card text-center shadow-sm">
        <div class="card-body">
          <i class="fa-solid fa-blog fa-3x mb-3" style="color: #d45044"></i>
          <h3 class="card-title">Posts</h3>
          <p class="card-text">Keep track of your great travel moment.</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-center shadow-sm">
        <div class="card-body">
          <i
            class="fa-solid fa-share-from-square fa-3x mb-3"
            style="color: #8540e5"
          ></i>
          <h3 class="card-title">Share</h3>
          <p class="card-text">Share your experiences and insightful guide.</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-center shadow-sm">
        <div class="card-body">
          <i
            class="fa-solid fa-handshake-simple fa-3x mb-3"
            style="color: #efa00e"
          ></i>
          <h3 class="card-title">Connect</h3>
          <p class="card-text">
            Find like-minded travel partners and make friends.
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-4">
      <div class="card text-center shadow-sm">
        <div class="card-body">
          <i class="fa-solid fa-database fa-3x mb-3" style="color: #2c52e7"></i>
          <h3 class="card-title">Authentication</h3>
          <p class="card-text">
            Securely access your account to protect your data.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-center shadow-sm">
        <div class="card-body">
          <i
            class="fa-solid fa-comment-dots fa-3x mb-3"
            style="color: #22955f"
          ></i>
          <h3 class="card-title">Comments</h3>
          <p class="card-text">
            Engage in the community by commenting on posts.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-center shadow-sm">
        <div class="card-body">
          <i
            class="fa-solid fa-arrow-up-from-bracket fa-3x mb-3"
            style="color: #167597"
          ></i>
          <h3 class="card-title">Multiple Photos Uploads</h3>
          <p class="card-text">Easily upload moments you value.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
